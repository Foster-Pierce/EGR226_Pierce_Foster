#include "LCD_preset.h"

void LCD_init (void){
write_command(3);
Systick_ms_delay(100);
write_command(3);
Systick_us_delay(200);
write_command(3);
Systick_ms_delay(100);
write_command(2);
Systick_us_delay(100);
write_command(0x28);
Systick_us_delay(100);
Systick_us_delay(100);
write_command(0x0F);
Systick_us_delay(100);
write_command(0x01);
Systick_us_delay(100);
write_command(0x06);
Systick_ms_delay(10);

}
